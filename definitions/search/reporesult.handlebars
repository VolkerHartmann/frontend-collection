<div class="ui divider"></div>
<div class="ui padded grid">
    <div class="ui row">
        <div class="ui fluid image">
            {{#if (isOpen _source.read)}}
                <a class="ui green right corner label">
                    <i class="lock open icon"></i>
                </a>
            {{else}}
                <a class="ui red right corner label">
                    <i class="lock icon"></i>
                </a>
            {{/if}}
        </div>
        <div class="ten wide column">
            <h3 class="ui header">{{_source.metadata.titles.0.value}}</h3>
        </div>
        <div class="two wide column">
            <a class="ui fluid orange label">
                {{_index}}
            </a>
        </div>
        <div class="three wide column">
            <a class="ui fluid blue label">
                {{_source.metadata.resourceType.typeGeneral}}
                <div class="detail">{{_source.metadata.resourceType.value}}</div>
            </a>
        </div>
    </div>
    <div class="ui row">
        <div class="column">
            <span>{{#each _source.metadata.creators}}{{givenName}}{{/each}}</span>
        </div>
    </div>
    <div class="ui row">
        <div class="column">
            {{#if _source.metadata.descriptions.0.description}}
                <i>{{_source.metadata.descriptions.0.description}}</i>
            {{else}}
                <i>No description available</i>
            {{/if}}
        </div>
    </div>
    <div class="ui row">
        <div class="five wide column">
            <div class="ui fluid label">
                Created at:
                <div class="detail">{{formatDate _source.created}}</div>
            </div>
        </div>
        <div class="five wide column">
            <div class="ui fluid label">
                Publisher:
                <div class="detail">{{_source.metadata.publisher}}</div>
            </div>
        </div>
        <div class="four wide column">
            <div class="ui fluid label">
                Publication Year:
                <div class="detail">{{_source.metadata.publicationYear}}</div>
            </div>
        </div>
    </div>
</div>

